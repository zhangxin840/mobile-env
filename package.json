{
  "name": "mobile-env",
  "version": "0.1.0",
  "description": "Online chart to describe mobile compatibility issues.",
  "scripts": {
    "clean": "find build | grep 'build/' | xargs rm -rf",
    "copy": "mkdir -p build/public && find src -name '*.html' -exec cp -prv '{}' 'build/public' ';'",
    "build": "npm run clean && npm run copy && webpack",
    "build:release": "npm run clean && npm run copy && webpack --optimize-minimize",
    "lint": "eslint src routes",
    "lint:fix": "eslint src routes --fix",
    "up": "node server.js",
    "deploy": "npm run build:release && cd build && lean deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhangxin840/mobile-env.git"
  },
  "author": "zhangxin840",
  "devDependencies": {
    "babel-core": "^6.0.20",
    "babel-eslint": "^4.1.3",
    "babel-loader": "^6.0.1",
    "babel-preset-es2015": "^6.0.15",
    "babel-preset-react": "^6.0.15",
    "babel-preset-stage-0": "^6.0.15",
    "css-loader": "^0.23.1",
    "eslint": "^1.10.3",
    "eslint-plugin-react": "^3.6.2",
    "firebase-tools": "^3.0.0",
    "node-sass": "^3.7.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-hot-loader": "^1.3.0",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.12.1"
  }
}
